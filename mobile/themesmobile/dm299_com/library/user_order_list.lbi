<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<!--{if $order.order_id}-->
  <div class="order_list">

          <h2> <a href="supplier.php?suppId={$order.supplier_id}"><em></em><span>{$order.shopname}</span></a>
			 {if $order.customers}<i><a href="javascript:chat_online({chat_order_id: '{$order.order_id}', chat_supp_id: '{$order.supplier_id}'});"></a></i>{elseif $order.tel}<i><a href="tel:{$order.tel}"></a></i>{/if}
			  <strong>{$order.order_status}</strong>
			  {if $order.extension_code eq 'pre_sale'}<strong>[预售]</strong>{/if}
			  {if $order.extension_code eq '150'}<strong>[秒杀]</strong>{/if}
		  </h2>
		<a href="user.php?act=order_detail&order_id={$order.order_id}">
		{foreach from=$order.goods_list item=goods name=goods}
		<div class="order_list_goods">
				<dl>  
				<dt><img src="{if $goods.goods_id gt 0 && $goods.extension_code neq 'package_buy'}{$goods.goods_thumb}{else}./themesmobile/dm299_com/images/flow/libao.png{/if}"></dt>
				<dd class="name"><strong>{$goods.goods_name|truncate:25}</strong><span>{if $goods.goods_attr}{$goods.goods_attr|nl2br}{/if}</span></dd>
				<dd class="pice" >{$goods.formated_goods_price}<em>x{$goods.goods_number}</em></dd>
			</dl>
			{if $order.shipping_status eq '1' }
				{if $goods.back_can}
					<div class="tk" style="width:95%;"><a href="user.php?act=back_order&order_id={$order.order_id}&goods_id={$goods.goods_id}&product_id={$goods.product_id}&x=2" class="haha">退款/退货</a></div>
				{else}
					<div class="tk" style="width:95%;"><a href="user.php?act=back_order_detail&id={$goods.back_id}" class="haha">{$goods.back_can_no}</a></div>
				{/if}
			{/if}
		</div>
		{/foreach}
          </a>
          <div class="pic">共{$order.count}件商品&nbsp;&nbsp;实付：<strong>{$order.total_fee}</strong></div>
          
	   {if $order.tk}
		  <div class="pic"><font color=#ff3300>[{$order.tk}]</div>
           {/if}
	  
	  <div class="anniu" style="width:95%;">    
              {$order.handler}
        </div>
    </div>
<!--{else}-->
 <div id="list_0_0" class="font12">您还没有任何的订单哦！</div>
<!--{/if}-->